<center><h1>Languages you already speak</h1></center>
<% @languages.each do |lang| %>
<ul>
	<% if user_knows_language?(lang.id) %>
	<li>
	<i class="fa fa-check" aria-hidden="true"></i>
        <%= h lang.language %>
 		<%= link_to 'remove', languages_users_remove_user_language_path(:remove_language_id => lang.id ), method: :post%>
    </li>
    <% else %>
    <li>
        <i class="fa fa-times" aria-hidden="true"></i>
        <%= h lang.language %>
        <%= link_to 'add', languages_users_add_user_language_path(:add_language_id => lang.id ), method: :post%>
    </li>
    <% end %>
</ul>
<% end %>
<center><%= link_to 'Back to your profile', user_path(current_user.id) %><br/></center>