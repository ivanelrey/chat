<h1 align="center">Log in</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
			<%= f.label :email %><br/>
			<%= f.email_field :email  %><br/>
			<%= f.label :password %><br/>
			<%= f.password_field :password %><br/>
			<%= f.submit "Log in"  %><br/>
<% end %>
	<%= link_to "Back to home page", root_path %> 
