<script type="text/javascript">
  function showVisitedCountryEdit() {

    div = document.getElementById('visited_countries_edit');
    var dates = document.querySelectorAll('*[id^="visited_country_remove"]');

    if(div.style.display == "none")
    {
        div.style.display = "block";
        for (i = 0; i < dates.length; i++)
        {
            dates[i].style.display = "inline-block";
        }
    }
    else
    {
        div.style.display = "none";
        for (i = 0; i < dates.length; i++)
        {
            dates[i].style.display = "none";
        }
    }
}
function showUserProfileEdit() {

    divedit = document.getElementById('user_profile_edit');
    divinfo = document.getElementById('user_profile_info');

    if(divinfo.style.display == "none")
    {
        divinfo.style.display = "block";
        divedit.style.display = "none"
    }
    else
    {
        divinfo.style.display = "none";
        divedit.style.display = "block"
    }
}
function showUserAboutMeEdit() {

    divedit = document.getElementById('user_about_me_edit');
    divinfo = document.getElementById('user_about_me');

    if(divinfo.style.display == "none")
    {
        divinfo.style.display = "block";
        divedit.style.display = "none"
    }
    else
    {
        divinfo.style.display = "none";
        divedit.style.display = "block"
    }
}
function showUserPostsEdit() {

    divedit = document.getElementById('user_post_edit');

    if(divedit.style.display == "none")
    {
        divedit.style.display = "block"
    }
    else
    {
        divedit.style.display = "none"
    }
}
</script>
