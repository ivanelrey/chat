<!-- ******HEADER****** --> 
<header class="header">
<div class="container">                       
	<% if @user.profile.avatar? %>
		<br/><%= image_tag @user.profile.avatar_url, class: 'profile-image img-responsive pull-left' %><br/>
	<% end %>
    <div class="profile-content pull-left">
        <h1 class="name"><%= @user.username %></h1>
        <h2 class="desc">Speaks 
        <% if (logged_in? && current_user == @user) %>
            <a href='/languages'><i class="fa fa-pencil" aria-hidden="true"></i></a>
        <% end %>
        </h2>   
        <ul class="social list-inline">
        <% if @user.languages.any? %>
        <%  @user.languages.each do |lang| %>
            <li><%= lang.language %></li> 
        <% end %>
        <% else %>
            <li>Not set yet</li> 
        <% end %>  
        </ul> 
        <h2 class="desc">Wants to learn 
        <% if (logged_in? && current_user == @user) %>
            <a href='/languages/learns_languages'><i class="fa fa-pencil" aria-hidden="true"></i></a>
        <% end %>
        </h2>   
        <ul class="social list-inline">
        <% if @user.learn_languages.any? %>
        <%  @user.learn_languages.each do |lang| %>
            <li><%= lang.language %></li> 
        <% end %>
        <% else %>
            <li>Not set yet</li> 
        <% end %>                  
        </ul> 
    </div><!--//profile-->    
    <% if (logged_in? && current_user == @user) %>
		<%= link_to 'Edit profile', edit_profile_path(@user.profile.id), class: 'btn-cta-primary pull-right fa fa-cog' %><br/>
		<%= link_to 'Your friends', friendships_path, class: 'btn-cta-primary pull-right' %><br/>
		<%= link_to 'All users', users_path,  class: 'btn-cta-primary pull-right' %><br/>
	<% else %>
		<%= link_to 'Back to your profile', user_path(current_user.id), class: 'btn-cta-primary pull-right' %><br/>
	<% end %>
    <!--<a class="btn btn-cta-primary pull-right" href="http://themes.3rdwavemedia.com/" target="_blank"><i class="fa fa-paper-plane"></i> Contact Me</a>  -->            
</div><!--//container-->
</header><!--//header-->

<div class="container sections-wrapper">
    <div class="row">
        <div class="primary col-md-8 col-sm-12 col-xs-12">
            <div class="user_profile_about_me_div">
                <%= render :partial => 'profiles/about_me_partial' %> 
            </div>
            <div class="user_posts_div">
                <%= render :partial => 'posts/posts_partial' %> 
            </div>
        </div><!--//primary-->
        <div class="secondary col-md-4 col-sm-12 col-xs-12">
            <div class="user_profile_info_div">
                <%= render :partial => 'profiles/user_profile_partial' %> 
            </div>
            <div class="visited_countries_div">
                <%= render :partial => 'visited_countries/visited_countries_partial' %>    
            </div>
            <aside class="languages aside section">
                <div class="section-inner">
                    <h2 class="heading">Languages</h2>
                    <div class="content">
                        <ul class="list-unstyled">
                            <li class="item">
                                <span class="title"><strong>English:</strong></span>
                                <span class="level">Native Speaker <br class="visible-xs"/><i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> </span>
                            </li><!--//item-->
                            <li class="item">
                                <span class="title"><strong>Spanish:</strong></span>
                                <span class="level">Professional Proficiency <br class="visible-sm visible-xs"/><i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star-half"></i></span>
                            </li><!--//item-->
                        </ul>
                    </div><!--//content-->
                </div><!--//section-inner-->
            </aside><!--//section-->           
        </div><!--//secondary-->    
    </div><!--//row-->
</div><!--//masonry-->
    

