<center>
<h1>Create an account</h1>

<% if @user.errors.any?  %>
<% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
<% end %>

<%= form_for @user do |f| %><br/>
  <%= f.label :Username %>
  <%= f.text_field :username %><br/>
  <%= f.label :email %>
  <%= f.email_field :email %><br/>
  <%= f.label :password %>
  <%= f.password_field :password%><br/>

  <%= f.submit %>
<% end %>
</center>